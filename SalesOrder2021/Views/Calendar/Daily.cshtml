@model List<SalesOrder2021.Models.EventCalendarDetails>

@{
    ViewBag.Title = "Election Calendar";
}

<style>
    .table_header {
        border: 1px solid black;
        padding: 2px 5px 0px 5px;
        font-weight: 600;
    }

    .table_subheader {
        border-bottom: 1px solid black;
        padding: 5px;
        font-weight: 600;
    }

    .table_content {
        border: 1px solid black;
        text-align: center;
        vertical-align: top;
        padding: 2px 5px 0px 5px;
    }

    .table_content_large {
        border: 1px solid black;
        text-align: center;
        font-size: 24px;
        padding: 10px;
    }

    .row_separator {
        border: 2px solid black;
    }
</style>

<br />

<div style="text-align:center;">
    @Html.ActionLink("< Prev", "PreviousDay", "Calendar", new { date = ViewBag.CurrentDate }, new { @class = "btn btn-primary link_small" })

    @Html.ActionLink("Monthly", "Monthly", "Calendar", new { date = ViewBag.CurrentDate }, new { @class = "btn btn-primary link_small" })

    @Html.ActionLink("Next >", "NextDay", "Calendar", new { date = ViewBag.CurrentDate }, new { @class = "btn btn-primary link_small" })
</div>

<br />

<div class="row">
    <div class="col-md-5">
        <img src='@Url.Content("~/Images/AESslug.png")' width="460" />
    </div>

    <div class="col-md-5" style="text-align:center;">
        <h2>Election Calendar - Daily</h2>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-3">
        <table style="width:70px;" align="center">
            <tr>
                <td class="table_content">
                    @ViewBag.CurrentDate.ToString("MMMM")
                </td>
            </tr>
            <tr>
                <td class="table_content" style="font-size:28px;">
                    @ViewBag.CurrentDate.ToString("dd")
                </td>
            </tr>
            <tr>
                <td class="table_content">
                    @ViewBag.CurrentDate.ToString("dddd")
                </td>
            </tr>
        </table>
    </div>

    <div class="col-md-7">
        @if (Model != null && Model.Count() > 0)
        {
            <table style="width:100%;">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="table_header" style="text-align:left; border:0px solid transparent; font-size:16px;">
                            @Html.DisplayFor(modelItem => item.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <td class="table_content" style="text-align:left; border:0px solid transparent; font-size:14px;">
                            @Html.DisplayFor(modelItem => item.ElectionTitle, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <td class="table_content" style="text-align:left; font-size:12px; border:0px solid transparent;">
                            @Html.DisplayFor(modelItem => item.ElectionEvent, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <hr />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div>
                No Events To Display
            </div>
        }
    </div>
</div>

